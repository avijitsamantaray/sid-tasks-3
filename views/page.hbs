    <script>
        window.addEventListener("scroll", reveal);
        function reveal() {
            var reveals = document.querySelectorAll(".show")
            for (var i = 0; i < reveals.length; i++) {
                var windowheight = window.innerHeight;
                var revealtop = reveals[i].getBoundingClientRect().top;
                var revealpoint = 150;
                if (revealtop < windowheight - revealpoint) {
                    reveals[i].classList.add("active")
                }
                else {
                    reveals[i].classList.remove("active")
                }
            }
        }

        var r = document.querySelector(':root')
        var rs = getComputedStyle(r)

        function dark() {
            document.getElementById("moon").style.display = "none";
            document.getElementById("sun").style.display = "block";
            r.style.setProperty('--bg', '#576574')
            r.style.setProperty('--text', 'white')
            r.style.setProperty('--hover', 'teal')
            r.style.setProperty('--btn', 'teal')
            r.style.setProperty('--light', '#576574')
            r.style.setProperty('--body', 'grey')
            r.style.setProperty('--nav', '#222f3e')

        }
        function light() {
            document.getElementById("moon").style.display = "block";
            document.getElementById("sun").style.display = "none";
            r.style.setProperty('--bg', 'rgba(27, 151, 209, 0.7)')
            r.style.setProperty('--text', 'black')
            r.style.setProperty('--hover', 'white')
            r.style.setProperty('--btn', 'rgba(27, 151, 209, 0.9)')
            r.style.setProperty('--light', 'white')
            r.style.setProperty('--body', 'white')
            r.style.setProperty('--nav', 'rgba(27, 151, 209, 0.9)')
}
